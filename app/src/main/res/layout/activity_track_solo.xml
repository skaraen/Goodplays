<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrackSolo"
    android:orientation="vertical"
    android:background="@drawable/bg6">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center">
<ImageView
    android:layout_width="200sp"
    android:layout_height="200sp"
    android:id="@+id/TrackCover"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Track Title"
            android:textSize="30sp"
            android:id="@+id/tsTrack"
            android:fontFamily="monospace"/>

        <TextView
            android:id="@+id/tsAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:text="Album Name"
            android:textSize="16sp"
            android:fontFamily="monospace"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Artist : "
                android:textSize="23sp"
                android:layout_weight="0.75"
                android:gravity="end"
                android:fontFamily="sans-serif-smallcaps"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textSize="23dp"
                android:id="@+id/tsArtist"
                android:gravity="start"
                android:fontFamily="sans-serif-smallcaps"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Out On : "
                android:textSize="23sp"
                android:gravity="end"
                android:layout_weight="0.75"
                android:fontFamily="sans-serif-smallcaps"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textSize="23dp"
                android:id="@+id/tsYear"
                android:gravity="start"
                android:fontFamily="sans-serif-smallcaps"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" Genre : "
                android:textSize="23sp"
                android:gravity="end"
                android:layout_weight="0.75"
                android:fontFamily="sans-serif-smallcaps"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:textSize="23dp"
                android:id="@+id/tsGenre"
                android:gravity="start"
                android:fontFamily="sans-serif-smallcaps"/>
        </LinearLayout>
    </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lyrics"
            android:padding="5dp"
            android:textSize="30sp"
            android:gravity="center"
            android:fontFamily="monospace"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lyrics not available"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="5dp"
            android:id="@+id/tsLyrics"
            android:fontFamily="serif-monospace"
            android:textStyle="italic"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to\nfavourites"
            android:textSize="18dp"
            android:id="@+id/tsFavs"
            android:fontFamily="casual"
            android:textStyle="bold"
            android:background="#000000"
            android:textColor="@color/yellow"
            />
    </LinearLayout>


</ScrollView>